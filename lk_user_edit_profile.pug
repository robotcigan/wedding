extends layout.pug

block content
  .grig.grid--container
    .row
      .col.col--sm-12
        .breadcrumbs
          nav.breadcrumbs__nav
            a(href="").breadcrumbs__link Главная
            a(href="").breadcrumbs__link.breadcrumbs__link--active Личный кабинет

    .row
      .col.col--lg-8.col--lg-offset-2.col--md-10.col--md-offset-1.col--sm-12
        .tabs
          nav.tabs__header.tabs__header--links
            a.tabs__link.tabs__link--active(href="./lk_user_edit_profile.html") Профиль
            a.tabs__link(href="./lk_user_edit_orders.html") Заявки

          .tabs__content.tabs__content--active
            form.form
              h3.h3 Аватар или логотип
              .ava(style="background: url(img/ava.jpg)")
              label(for="file-upload").btn.btn--primary.btn--solid Изменить фото
                input(type="file" id="file-upload")
              .row
                .col.col--sm-6
                  h3.h3 Персональные данные
                  .form-control
                    input(type="text")
                    label Фамилия
                  .form-control
                    input(type="text")
                    label Имя
                  .form-control
                    input(type="text")
                    label Отчество
                  .form-control
                    select.custom-select
                      option Город
                      option Краснодар
                    i.form-control__icon.fa.fa-angle-down
                  .form-control
                    input(type="text")
                    label Новый пароль
                    i.form-control__icon.fa.fa-lock
                  .form-control
                    input(type="text")
                    label Повторите пароль
                    i.form-control__icon.fa.fa-lock
                .col.col--sm-6
                  h3.h3 Контактная информация
                  .form-control
                    input(type="tel").phone-mask
                    label Номер телефона
                    i.form-control__icon.fa.fa-phone
                  .form-control
                    input(type="email")
                    label E-mail
                    i.form-control__icon.fa.fa-envelope
                
                .col.col--lg-12
                  .text--sm-center
                    button.btn.btn--primary Сохранить изменения


  include viewed.pug