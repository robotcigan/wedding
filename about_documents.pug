extends layout.pug

block content
  .grig.grid--container
    .breadcrumbs
      .row.row--sm-center
        .col.col--sm
          nav.breadcrumbs__nav
            a(href="").breadcrumbs__link Главная
            a(href="").breadcrumbs__link О проекте
            a(href="").breadcrumbs__link.breadcrumbs__link--active Общая информация
    .row.offset
      .col.col--md-3
        nav.sidebar
          li: a(href="").sidebar__link Общая информация
          li: a(href="").sidebar__link Как это работает?
          li: a(href="").sidebar__link Команда "Свадебные штучки"
          li: a(href="").sidebar__link Партнеры и друзья
          li: a(href="").sidebar__link.sitebar__link--active Нормативные документы
          li: a(href="").sidebar__link Отзывы о проекте
      .col.col--md-9
        h1.h1 Нормативные документы
        .row
          -for(var i = 0; i < 8; i++)
            .col.col--sm-4
              .gallery
                .document-img.document-img--solid
                  a(href="img/document.jpg")
                    img(src="img/document.jpg", alt="")

    include viewed.pug
