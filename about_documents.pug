extends layout.pug

block content
  .grid.grid--container
    .breadcrumbs
      .row.row--sm-center
        .col.col--sm
          nav.breadcrumbs__nav
            a(href="").breadcrumbs__link Главная
            a(href="").breadcrumbs__link О проекте
            a(href="").breadcrumbs__link.breadcrumbs__link--active Общая информация
    .row.offset
      .col.col--md-3
        nav.sidebar
          li: a(href="about_info.html").sidebar__link Общая информация
          li: a(href="about_knowhow.html").sidebar__link Как это работает?
          li: a(href="about_team.html").sidebar__link Команда "Свадебные штучки"
          li: a(href="about_friends.html").sidebar__link Партнеры и друзья
          li: a(href="about_documents.html").sidebar__link.sidebar__link--active Нормативные документы
          li: a(href="about_comments.html").sidebar__link Отзывы о проекте
      .col.col--md-9
        h1.h1 Нормативные документы
        .row
          -for(var i = 0; i < 8; i++)
            .col.col--lg-4.col--sm-6
              .gallery
                .document-img.document-img--solid
                  a(href="img/document-big.jpg")
                    img(src="img/document.jpg", alt="")

  include viewed.pug
