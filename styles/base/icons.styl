.ruble:before
  content 'â‚½'
  content '\20BD'
  font-family 'Proxima Nova', 'Segoe UI', 'Arial', 'Geneva', 'Helvetica'
  font-style normal
  font-size 1.6rem
  font-weight 400
  margin-left .5rem

.reload
  background url('../../img/reload.png') no-repeat 50%
  background-size contain
  display inline-block
  circle(1.4rem)
  margin-left 1rem
  vertical-align middle
  transition transform .2s

.myworld
  background url('../../img/myworld.png') no-repeat
  background-size contain
  display inline-block
  size(1.2rem, 1.6rem)
  vertical-align middle
  top 1.5rem !important
  &--color
    background url('../../img/myworld-color.png') no-repeat
    background-size contain
    size(1.6rem, 2.4rem)

.quote-icon
  background url('../../img/quote.png') no-repeat
  background-size contain
  circle(3.2rem)
  display inline-block
  flex-shrink 0

.arrow
  background url('../../img/icon-arrow.png') no-repeat
  background-size contain
  display inline-block
  size(1.2rem, 1.8rem)
  vertical-align middle
  
.gift
  background url('../../img/gift.png') no-repeat
  background-size contain
  display inline-block
  circle(1.7rem)
  margin-left .5rem
  vertical-align middle
  transform translateY(-4px)


