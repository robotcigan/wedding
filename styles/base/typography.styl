.link
  &--primary
    color $primary
    text-decoration none

.h1
  font-size 3.2rem
  font-weight 600
  line-height 1.2
  margin-bottom 3.2rem
  margin-top 0
  & + .info
    margin-top -2rem

.h2
  font-size 3.2rem
  font-weight 600
  // margin-bottom 0rem
  margin-bottom 2rem
  margin-top 0

.h3
  font-size 2.4rem
  font-weight 600
  color $main
  line-height 1.2

.text-left
  text-align left

.text-center
  text-align center

.text-right
  text-align right


.text-primary
  color $primary

.text-secondary
  color $secondary

.text-error
  color $error
  line-height 1.2


.without-offset
  margin 0
  & + p
    margin-top 0

p
  margin-top 0