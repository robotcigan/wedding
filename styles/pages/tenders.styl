.tender
  border 1px solid $light-gray
  border-radius $radius
  margin-bottom 4rem
  padding 2rem
  &--closed
    position relative
    &:after
      content ''
      background url('../../img/tender-closed.png') no-repeat
      background-size contain
      circle(9rem)
      position absolute
      right 2rem
      top 2rem
  &__date
    border 1px solid $light-gray
    border-radius 50%
    color $main
    circle(12rem)
    text-align center
  &__number
    font-size 3.6rem
    font-weight 600
    line-height 1
    margin-top 3.2rem
  &__month
    line-height 1
  &__title
    color $primary
    font-size 2.4rem
    font-weight 600
    margin-bottom 1rem
  &__anons
    margin-bottom 2rem