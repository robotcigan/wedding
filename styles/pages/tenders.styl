.tenders
  width 100%

.tender
  border 1px solid $light-gray
  border-radius $radius
  margin-bottom 4rem
  padding 2rem
  position relative
  &--closed
    position relative
    &:after
      content ''
      background url('../../img/tender-closed.png') no-repeat
      background-size contain
      circle(9rem)
      position absolute
      right 2rem
      top 2rem
  &__date
    border 1px solid $light-gray
    border-radius 50%
    color $main
    circle(12rem)
    text-align center
  &__number
    font-size 3.6rem
    font-weight 600
    line-height 1
    margin-top 3.2rem
  &__month
    line-height 1
  &__title
    color $primary
    display inline-block
    font-size 2.4rem
    font-weight 600
    line-height 1.2
    margin-bottom 1rem
    text-decoration none
  &__status
    color $secondary
    display block
    margin-bottom 1rem
  &__anons
    margin-bottom 2rem
  &__controls
    position absolute
    right 2rem
    top 2rem
    .btn
      margin-bottom 1rem
      text-align center
      width 10rem

.tender-bg
  align-items center
  background url('../../img/tender.jpg') no-repeat
  background-size cover
  display flex
  height 35rem
  margin-bottom 1.5rem
  justify-content center
  &__text.text
    max-width 70rem
    padding-left 2rem
    .text
      &__title
        font-size 3rem
        font-weight 600
        line-height 1.2
        margin-bottom 1rem
        margin-top 0
      &__subtitle
        color #777
        line-height 1.2
        margin-bottom 3rem
  & + .hr
    margin-bottom 8rem
  

.tender-calendar-title
  margin-bottom 1rem
  margin-top 0

@media(max-width 1200px)
  .tender-bg
    background none
    height initial
    margin-bottom 2rem
    padding 4rem 0
  .tender
    &__date
      border 0
      circle(6rem)
      margin-top -3rem
      margin-bottom 1rem
      text-align left

@media(max-width 992px)
  .datepicker-container
    &--catalog
      margin-bottom 4rem

@media(max-width 767px)
  .tender
    &--closed
      &:after
        circle(7rem)
        top 1rem
  .tender-bg
    &__text.text
      .text
        &__title
          margin-bottom 1.5rem

