.tender
  border 1px solid $light-gray
  border-radius $radius
  margin-bottom 4rem
  padding 2rem
  &--closed
    position relative
    &:after
      content ''
      background url('../../img/tender-closed.png') no-repeat
      background-size contain
      circle(9rem)
      position absolute
      right 2rem
      top 2rem
  &__date
    border 1px solid $light-gray
    border-radius 50%
    color $main
    circle(12rem)
    text-align center
  &__number
    font-size 3.6rem
    font-weight 600
    line-height 1
    margin-top 3.2rem
  &__month
    line-height 1
  &__title
    color $primary
    font-size 2.4rem
    font-weight 600
    margin-bottom 1rem
    text-decoration none
  &__anons
    margin-bottom 2rem

.tender-bg
  background url('../../img/tender.jpg') no-repeat
  background-size cover
  display flex
  height 35rem
  margin-bottom 8rem
  justify-content center
  padding-top 9rem
  &__text.text
    max-width 70rem
    padding-left 2rem
    .text
      &__title
        font-size 3rem
        font-weight 600
        margin-bottom .5rem
      &__subtitle
        color #777
        line-height 1.2
        margin-bottom 3rem