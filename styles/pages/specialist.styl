.specialist-aside
  .h3
    margin-bottom 1rem
    &:first-child
      margin-top 0

.specialist-socials
  .fa
    font-size 2.4rem
  a
    &:not(:last-child)
      margin-right 1.5rem
  .fa-vk
    color $vk
  .fa-odnoklassniki
    color $ok
  .fa-facebook
    color $facebook
  .fa-twitter
    color $twitter
  .fa-instagram
    color $insta
  .fa-youtube-play
    color $youtube
  .fa-vimeo
    color $vimeo


.specialist-adress
  margin-top 0

.specialist-map
  iframe
    height 15rem

.video
  cursor pointer
  display inline-block
  margin-bottom 3rem
  position relative
  &:before
    content ''
    background rgba($main, .2)
    position absolute
    circle(100%)
  &:after
    content ''
    background url('../../img/play.png')
    background-size contain
    circle(4.8rem)
    center()
  img
    display block