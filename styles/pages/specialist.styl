.specialist-aside
  .h3
    margin-bottom 1rem
    &:first-child
      margin-top 0

.specialist-adress
  margin-top 0

.specialist-map
  iframe
    height 15rem
    width 100%

.video
  cursor pointer
  display inline-block
  margin-bottom 3rem
  position relative
  &:before
    content ''
    background rgba($main, .2)
    position absolute
    circle(100%)
  &:after
    content ''
    background url('../../img/play.png')
    background-size contain
    circle(4.8rem)
    center()
  img
    display block
    max-width 100%

@media(max-width 1200px)
  .specialist-profile-left
  .specialist-profile-center
  .specialist-profile-right
    margin-bottom 2rem