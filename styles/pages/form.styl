.select2
  &-dropdown
    border-color $light-gray
    border none

.select2-dropdown.select2-dropdown--below
  animation smallFadeUp .3s forwards

.select2-container--open .select2-dropdown--below
  box-shadow $shadow

.select2-container--default.select2-container--open .select2-selection--single .select2-selection__arrow b
  transform rotate(180deg)

.select2-container--default
  // max-width 100% !important
  // width 100% !important
  .select2-selection--single
    border none
    border-radius 0
    height 3.4rem
    .select2-selection__rendered
      line-height 3.2rem
    .select2-selection__arrow b
      border none
      // background url('../../img/arrows.png') no-repeat
      content url("\f087")
      font-family 'FontAwesome'
      height 5px
      margin-left -10px
      margin-top 1px
      transition transform .2s
      width 10px
  .select2-search--dropdown
    .select2-search__field
      border-color $light-gray
        // border none
  .select2-results__option
    &--highlighted[aria-selected]
      background-color rgba($primary, .1)
      color $main
    &[aria-selected=true]
      background-color $primary
      color #fff
      font-weight 500

.form-control
  min-height 5rem
  margin-bottom 1.6 rem
  position relative
  &__icon
    color #ddd
    position absolute
    right .5rem
    top 1rem
    transition all .2s
  &__words
    bottom 2rem
    font-size 1.2rem
    position absolute
    right 1rem
  label
    // background #fff
    cursor text
    left 0
    position absolute
    top 6px
    transition all .2s
    // will-change font-size, top
    width 100%
    z-index 0
  input[type="text"],
  input[type="password"],
  input[type="date"],
  input[type="email"],
  input[type="number"],
  select,
  .select2-selection--single
    background transparent
    border 0
    border-bottom 2px solid $light-gray
    display block
    height 4rem
    font-family $font
    font-size 1.6rem
    transition border-color .2s
    position relative
    resize vertical
    width 100%
    z-index 2
    -webkit-appearance none
    &:invalid
      & + label
        color $gray
        font-size 1.2rem
        top -12px
    &:hover
      border-color rgba($gray, .45)
    &:focus
      border-color $primary
      & + label
        color $primary
        font-size 1.2rem
        top -12px
      & + label + .form-control__icon
        color $primary
      & + label + .myworld
        background-image url('../../img/myworld-selected.png')
  textarea
    background transparent
    border 0
    border-bottom 2px solid $light-gray
    min-height 17.6rem
    font-family $font
    font-size 1.6rem
    resize vertical
    padding-top 3rem
    transition border-color .2s
    width 100%
    -webkit-appearance none
    & + label
      top 0
    &:hover
      border-color rgba($gray, .45)
    &:focus
      border-color $primary
      & + label
        color $primary
  .select2-container--open + .form-control__icon
      transform rotate(180deg)
  &--error
    input[type="text"],
    input[type="password"],
    input[type="date"],
    input[type="email"],
    input[type="number"],
    select,
    .select2-selection--single
      border-color $error
    label
      color $error
    .form-control__icon
      color $error

.custom-select-type-2
  display inline-block
  padding-right 2rem
  vertical-align middle

.select2-container .select2-selection--single .select2-selection__rendered
  padding-right 1rem

.btn
  border 0
  border-radius 24px
  cursor pointer
  display inline-block
  font-family $font
  font-size 1.6rem
  font-weight 600
  // height 4rem
  padding .8rem 2rem
  text-decoration none
  transition filter .4s
  &--primary
    background $primary
    color #fff
    &:hover
      background $primary - 8%
      filter: drop-shadow(0 8px 8px rgba($primary, .3))
    &.btn--solid
      border 1px solid $primary
      background transparent
      color $primary
      &:hover
        background $primary
        color #fff
        filter: none
  input[type="file"]
    display none
  &--secondary
    &.btn--solid
      border 1px solid $secondary
      background transparent
      color $secondary
      span
        vertical-align middle
      &:hover
        filter: none
        .reload
          transform rotate(90deg)
  &--small
    font-weight 400
    height 3.2rem
    padding .2rem 2rem
  &--full-width
    text-align center
    width 100%
  &__arrow
    background rgba(#fff, .5)
    border-radius 50%
    circle(1.6rem)
    display inline-block
    margin-left 1rem
    text-align center
    vertical-align middle
    .fa
      color rgba($primary, .5)
      display inline-block
      font-size 1.4rem
      line-height 1
      vertical-align top
      transform translateY(1px)



.tabs
  &__header
    border-bottom 1px solid $light-gray
    display flex
    flex-basis auto
    justify-content space-between
    margin-bottom 2rem
  &__link
    color $gray
    cursor pointer
    display block
    flex-basis 100%
    line-height 2.4
    padding 0 2rem
    text-align center
    &--active
      color $main
      border-bottom 3px solid $primary
  &__content
    display none
    &--active
      display block
  &--type-2
    .tabs
      &__header
        border-bottom 0
      &__link
        padding 0
        &--active
          border-bottom 0
          span
            background #ffefb3
            display inline-block
            line-height 2.8rem
            padding 0 .5rem
            position relative
            // min-width 17rem
            z-index 1
            &:before
              background url('../../img/select-left.png') 50% no-repeat
              background-size contain
              content ''
              left -2rem
              height 2rem
              position absolute
              size(2.8rem, 3rem)
              z-index -1
            &:after
              background url('../../img/select-right.png') 50% no-repeat
              background-size contain
              content ''
              right -2rem
              height 2rem
              position absolute
              size(2.8rem, 3rem)
              z-index -1


.accordion
  &__body
    display none

.checkbox
  cursor pointer
  display block
  margin-bottom 1rem
  label
    background transparent
    border-radius $radius
    border 2px solid $primary
    cursor pointer
    circle(2.4rem)
    display inline-block
    margin-right 1rem
    position relative
    vertical-align middle
    &:after
      color $primary
      content "\f00c"
      display none
      font-family 'FontAwesome'
      font-size 1.5rem
      left 3px
      position absolute
      top -2px
  input
    display none
  input:checked + label:after
    display block
  span
    color $main
    vertical-align middle

.datepicker-inline.flatpickr-input.form-control
  display none !important

.datepicker-inline--max-width + .flatpickr-calendar
  max-width 100% !important
  margin-top 1rem



