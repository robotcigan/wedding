.hero
  background url('../../img/bg.jpg') 50% no-repeat
  background-size cover
  display block
  height 100vh
  // height calc(100vh - 4.8rem)
  height 60rem
  margin 0
  position relative
  width 100%
  &:before
    background linear-gradient(to bottom, rgba($main, .5), transparent)
    content ''
    left 0
    height 100%
    position absolute
    top 0
    width 100%
    z-index 5
  &:after
    content ''
    background-color rgba(#0b0b1b, .6)
    height 100%
    position absolute
    top 0
    width 100%
    z-index 0
  &__align
    align-items center
    display flex
    flex-wrap wrap
    height 100%
    justify-content center
  &__content
    color #fff
    // margin 0 auto
    text-align center
    // padding 0 10rem
    position relative
    z-index 50
    // width 75%
  &__header
    font-size 4.8rem
    font-weight 700
    letter-spacing 1px
    line-height 1
    margin 0
    margin-bottom 2rem
  &__subheader
    font-size 2.4rem
    line-height 1.2
    margin 0
    font-weight 300
  &__time
    font-size 3rem
    font-weight 600
  & + .banners
    margin-bottom 8rem

.index-category
  &__link
    color $blue
    display block
    margin-bottom .4rem
    text-decoration none
    &:hover
      color $primary
  &__img
    max-width 100%


.index-events
  background-color #f7f9fb
  padding 4rem 0
  .h3
    margin-bottom 1rem
  p + .btn
    margin-top 1rem
  img
    max-width 100%


.email-block
  background url('../../img/email.jpg') no-repeat
  background-position 70%
  background-size cover
  height 18rem
  width 100%
  &__title
    font-size 2.4rem
    font-weight 600
    line-height 1.2
    span
      color $primary
  &__container
    margin-top 6rem


.news-slider
  .slide
    &__title
      color $main
      display block
      font-size 2.4rem
      font-weight 600
      line-height 1.2
      margin-bottom 1rem
      margin-top 2rem
      text-decoration none
      &:hover
        color $primary

.app-ad
  background-color $light-gray + 50%
  margin-top 20rem
  padding-top 8rem
  .grid--container
    position relative
    &:after
      background url('../../img/hand.png') no-repeat
      background-size contain
      bottom 0
      content ''
      size(44.5rem, 49rem)
      position absolute
      right 0
  &__title
    font-size 3rem
    font-weight 600
  &__subtitle
    margin-bottom 2rem
  &__img
    display inline-block
    margin-bottom 8rem
    margin-right 2rem

.commercial-slider
  .slick-prev,
  .slick-next
    background-color $light-gray
    border-radius 50%
    circle(4rem)
    top 50%
    z-index 10
  .slick-prev
    left 3rem
    &:before
      margin-left -2px
  .slick-next
    right 3rem
    &:before
      margin-left 6px

.contacts
  height 35rem
  position relative
  .grid--container
    height 100%
    left 0
    position absolute
    pointer-events none
    right 0
    top 0
  &__left.left
    background rgba($main, .9)
    height 100%
    padding 5rem 0
    position relative
    pointer-events auto
    width 35rem
    &:before
      background rgba($main, .9)
      content ''
      height 100%
      margin-right 35rem
      position absolute
      right 0
      top 0
      width 100vw
    .h2
      color #fff
    .left
      &__label
        color $primary
        font-size 1.2rem
        font-weight 600
        letter-spacing 1px
        line-height 1
        text-transform uppercase
      &__header
        color #fff
        font-weight 600
        &:not(:last-child)
          margin-bottom 2rem
  // iframe
  //   filter: grayscale(100%)
  //   height 100%
  //   width 100%
    
#contact-map
  height 100%


@media(max-width 767px)
  .hero
    height 35rem
    &__content
      margin-top 5rem
      

